<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
    </style>
    <title>Exam site</title>
</head>

<body style="background: #0694cc;">
    <nav class="navbar navbar-expand-md navbar-togglable-sm shadow-lg " style="background: #0694cc;">
        <a class="navbar-brand" href="/teacher/dashboard" style="color: white;"><img src="/styles/images/tachometer.svg"
                width="40" height="40"> SPEED TEST</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myNav">
            <ul class="navbar nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" id="user-name"> Welcome Back, <%= user.username %> </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/teacher/tests">My Tests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/teacher/messages">My Messages</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="btn dropdown-toggle text-white" href="#" id="dropdownMenuButton" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        My Profile
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background: #0694cc;">
                        <a class="dropdown-item text-white" href="#">My Account</a>
                        <a class="dropdown-item text-white" href="/logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container text-muted">
        <br><br>
        <div class="row">
            <% user.allTests.forEach(function(test) { %>
            <div class="col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-header">
                        <p><%= test.topic %></p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Questions: <%= test.totalq %></p>
                        <p class="card-text">Duration: <%= test.duration %></p>
                        <a href="/test/<%= test._id %>/edit" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
            <% }); %>
            <div class="col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-header">
                        Blank template
                    </div>
                    <div class="card-body">
                        <p class="card-text">Questions: --</p>
                        <p class="card-text">Duration: --</p>
                        <a href="/test/create" class="btn btn-primary">Create new test</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <!-- <script src="../public/scripts/teacherTest.js"></script> -->
</body>

</html>